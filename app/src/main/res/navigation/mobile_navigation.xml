<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/permissions_fragment">

    <fragment
        android:id="@+id/permissions_fragment"
        android:name="com.nlc.gesturesnap.tab.capture.ui.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/navigation_capture"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/navigation_capture"
        android:name="com.nlc.gesturesnap.tab.capture.ui.CaptureFragment"
        tools:layout="@layout/fragment_capture">

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/navigation_capture"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.nlc.gesturesnap.tab.gallery.ui.GalleryFragment"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/navigation_guide"
        android:name="com.nlc.gesturesnap.tab.guide.ui.GuideFragment"
        tools:layout="@layout/fragment_guide" />
</navigation>